<div class="text-center">
  <h1>{{title}}</h1>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <form id="create-comment" data-id="{{id}}">
    <div>
      <label for="comment-content">Comment:</label>
      <input type="text" name="comment-content" id="comment-content">
    </div>
    <button class="btn btn-primary" type="submit">Leave a comment!</button>
  </form>
  {{#each comments as |comment|}}
  <p>Comment: {{comment.content}}</p>
  <p>Left by: {{comment.user.name}}</p>
  {{/each}}
</div>

<script src="/js/create-comment.js"></script>